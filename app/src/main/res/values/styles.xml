<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/Widget.AppCompat.TextView</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="android:listViewStyle">@style/Widget.AppCompat.ListView</item>

    </style>
    <style name="Widget.AppCompat.TextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lobster_regular</item>
    </style>

    <style name="Widget.AppCompat.Button" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/lobster_regular</item>
    </style>

    <style name="Widget.AppCompat.ListView." parent="android:Widget.ListView">
        <item name="android:fontFamily">@font/lobster_regular</item>
    </style>

</resources>
